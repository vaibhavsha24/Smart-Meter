<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_dash"
        tools:context=".Dash">

    <TextClock
            android:id="@+id/textClock"
            android:layout_width="201dp"
            android:layout_height="50dp"
            android:format12Hour="hh:mm:ss a" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="500dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.0"/>
        
    <ImageButton
            android:layout_width="413dp"
            android:layout_height="173dp" app:srcCompat="@drawable/bill"
            android:id="@+id/Bill"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:onClick="imgclicked"
            android:background="#F1F1EA"/>

    <TextView
            android:text="Bill"
            android:layout_width="117dp"
            android:layout_height="37dp"
            android:id="@+id/textView2" android:textColor="#0A0A0A"
            android:textSize="30sp" android:textStyle="bold" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="128dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>
    <ImageButton
            android:layout_width="408dp"
            android:layout_height="179dp" app:srcCompat="@drawable/consumption"
            android:id="@+id/Consumption"
            app:layout_constraintTop_toBottomOf="@+id/Bill" android:background="#00F3EFEF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Consumption"
            android:layout_width="146dp"
            android:layout_height="44dp"
            android:id="@+id/textView3" android:textSize="24sp"
            android:textColor="#0A0A0A" android:textStyle="bold" android:layout_marginTop="304dp"
            app:layout_constraintTop_toTopOf="@+id/Bill" android:layout_marginStart="152dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="392dp"
            android:layout_height="333dp" app:srcCompat="@drawable/conn"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/Consumption" android:layout_marginTop="172dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text=" EstimatedConsumption:"
            android:layout_width="333dp"
            android:layout_height="44dp"
            android:id="@+id/present" android:textColor="#F54C08D8"
            android:textSize="30sp" android:layout_marginTop="364dp"
            android:textStyle="bold|italic" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="OnTime"
            android:layout_width="180dp"
            android:layout_height="62dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView18" android:textColor="#0F41F7"
            android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginTop="68dp"/>
    <TextView
            android:text="Past Consumption"
            android:layout_width="262dp"
            android:layout_height="47dp"
            android:id="@+id/textView19" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="#042EFF" android:textSize="30sp"/>
    <TextView
            android:text="Consumpion Limit"
            android:layout_width="271dp"
            android:layout_height="34dp"
            android:id="@+id/textView25" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="#112DE2" android:textSize="30sp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>