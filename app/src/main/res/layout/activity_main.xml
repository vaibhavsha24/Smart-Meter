<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
            android:background="@drawable/bac">
        <TextView
                android:text="City"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:id="@+id/city" android:layout_marginTop="108dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp" android:textColor="#F3EEEE" android:textSize="24sp"
                android:textStyle="bold"/>
        <TextView
                android:text="K No"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:id="@+id/K_No" android:layout_marginTop="168dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#F1EFEF" android:textSize="24sp" android:layout_marginStart="48dp"
                android:textStyle="bold"/>
        <TextView
                android:text="State"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:id="@+id/state3" android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="48dp" android:textColor="#FFFFFF" android:textSize="24sp"
                android:textStyle="bold"/>
        <TextView
                android:text="Password"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:id="@+id/Password" android:layout_marginTop="228dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textColor="#F0E9E9" android:textSize="24sp" android:layout_marginStart="48dp"
                android:textStyle="bold"/>
        <Spinner
                android:layout_width="182dp"
                android:layout_height="36dp"
                android:id="@+id/spinner" android:layout_marginTop="52dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/state3"
                android:layout_marginStart="8dp"/>
        <Spinner
                android:layout_width="176dp"
                android:layout_height="31dp"
                android:id="@+id/spinner2"
                android:layout_marginStart="184dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:layout_width="204dp"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="188dp" android:hint="@string/hint" android:layout_marginTop="84dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner2"/>
        <Button
                android:text="login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button" android:layout_marginTop="340dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="124dp"/>
        <ImageView
                android:layout_width="413dp"
                android:layout_height="292dp" app:srcCompat="@drawable/images"
                android:id="@+id/imageView3" android:layout_marginTop="68dp"
                app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
    <EditText
            android:layout_width="198dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Kno" android:layout_marginStart="196dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="@string/hint1"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="164dp"/>
</android.support.constraint.ConstraintLayout>
